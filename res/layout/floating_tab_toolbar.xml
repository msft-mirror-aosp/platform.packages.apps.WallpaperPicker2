<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_tab_toolbar_background"
    tools:ignore="contentDescription"
    android:padding="@dimen/floating_tab_toolbar_padding">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutDescription="@xml/floating_tab_toolbar_motion_scene">

        <View
            android:id="@+id/primary_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/floating_tab_toolbar_tab_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/primary_icon"
            app:layout_constraintEnd_toEndOf="@+id/primary_text" />

        <View
            android:id="@+id/secondary_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/floating_tab_toolbar_tab_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/secondary_text"
            app:layout_constraintStart_toStartOf="@+id/secondary_icon" />

        <ImageView
            android:id="@+id/primary_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/floating_tab_toolbar_tab_horizontal_padding"
            android:paddingVertical="@dimen/floating_tab_toolbar_tab_vertical_padding"
            app:tint="@color/system_on_surface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/primary_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            tools:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/floating_tab_toolbar_text_max_width"
            android:minHeight="@dimen/accessibility_min_height"
            android:textAppearance="@style/WallpaperPicker.Preview.TextAppearance.NoAllCaps"
            android:textColor="@color/text_color_primary"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:paddingEnd="@dimen/floating_tab_toolbar_tab_horizontal_padding"
            android:paddingVertical="@dimen/floating_tab_toolbar_tab_vertical_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/primary_icon"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constrainedWidth="true"
            tools:text="Tab Primary"/>

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/floating_tab_toolbar_tab_divider_width"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/primary_text"
            app:layout_constraintEnd_toStartOf="@+id/secondary_icon"
            app:layout_constraintHorizontal_bias="0.5" />

        <ImageView
            android:id="@+id/secondary_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/floating_tab_toolbar_tab_horizontal_padding"
            android:paddingVertical="@dimen/floating_tab_toolbar_tab_vertical_padding"
            app:tint="@color/system_on_surface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/secondary_text"
            app:layout_constraintHorizontal_bias="0.5"
            tools:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/floating_tab_toolbar_text_max_width"
            android:minHeight="@dimen/accessibility_min_height"
            android:textAppearance="@style/WallpaperPicker.Preview.TextAppearance.NoAllCaps"
            android:textColor="@color/text_color_primary"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:paddingEnd="@dimen/floating_tab_toolbar_tab_horizontal_padding"
            android:paddingVertical="@dimen/floating_tab_toolbar_tab_vertical_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/secondary_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constrainedWidth="true"
            tools:text="Tab Secondary"/>
    </androidx.constraintlayout.motion.widget.MotionLayout>
</FrameLayout>